<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">


    <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/textView7" android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
    />
    <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/textView6" android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/textView1" android:textAlignment="center"
            android:textSize="22sp" android:textStyle="bold" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/textView2" android:textSize="18sp"
            android:textAlignment="center" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="130dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="131dp"/>
    <TextView
            android:text="@string/playCount"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:id="@+id/textView4" android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            android:layout_marginTop="38dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="19dp" app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/textView6" android:layout_marginEnd="24dp"/>
    <TextView
            android:text="@string/listeners"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:id="@+id/textView5" android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" app:layout_constraintEnd_toStartOf="@+id/textView7"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn" android:layout_marginEnd="56dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="Similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2" android:layout_marginStart="21dp"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="58dp"/>
</android.support.constraint.ConstraintLayout>