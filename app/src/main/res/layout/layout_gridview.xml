<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">
    <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/img"
            android:contentDescription="@string/cover"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" android:layout_marginTop="5dp"/>

    <TextView
            android:layout_width="180dp" android:layout_height="30dp"
            android:id="@+id/text1"
            android:textAlignment="center" android:textStyle="bold" android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/img"/>

    <TextView
            android:layout_width="180dp" android:layout_height="20dp"
            android:id="@+id/text2"
            android:textAlignment="center" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text1" android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>
</android.support.constraint.ConstraintLayout>