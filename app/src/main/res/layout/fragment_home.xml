<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:inputType="textFilter"
            android:ems="10"
            android:id="@+id/editText"
            android:imeOptions="actionSearch"
            android:hint="@string/search_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/top_tracks"
            android:layout_width="159dp"
            android:layout_height="36dp"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="202dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_height="583dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/rView"
            app:layout_constraintHorizontal_bias="1.0" android:layout_width="0dp"/>
    <Button
            android:text="@string/btn"
            android:layout_width="85dp"
            android:layout_height="36dp"
            android:visibility="invisible"
            android:id="@+id/button" android:layout_marginEnd="36dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>